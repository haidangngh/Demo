@model IEnumerable<AppData.Models.staff>
@using AppData.Models;
@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a href="@Url.Action("DownloadExcel", "Staff")" class="btn btn-primary">Download Excel</a>
	<form asp-action="ImportExcel" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label for="file">Chọn file Excel để import</label>
			<input type="file" name="file" class="form-control" required />
		</div>
		<button type="submit" class="btn btn-success">Import Excel</button>
	</form>

	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LastModifiedDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AccountFe)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AccountFpt)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.StaffCode)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastModifiedDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AccountFe)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AccountFpt)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.StaffCode)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })|
					<button asp-controller="Staff" asp-action="Khoa">Khoa</button>

				</td>
			</tr>
		}
	</tbody>
</table>
 
